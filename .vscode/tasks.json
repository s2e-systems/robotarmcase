{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy everything",
            "dependsOn": [
                "cargo build --release",
                "Deploy colour_sensor to armtarget1",
                "Deploy controller to armtarget2",
                "Deploy presence sensor to armtarget3",
                "Deploy dobot to armtarget4"
            ],
            "problemMatcher": []
        },
        {
            "label": "Deploy colour_sensor to armtarget1",
            "type": "shell",
            "command": "scp",
            "args": [
                "colour_sensor/target/aarch64-unknown-linux-gnu/release/colour_sensor",
                "pi@armtarget1:~/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Deploy controller to armtarget2",
            "type": "shell",
            "command": "scp",
            "args": [
                "controller/target/aarch64-unknown-linux-gnu/release/controller",
                "pi@armtarget2:~/"
            ]
        },
        {
            "label": "Deploy presence sensor to armtarget3",
            "type": "shell",
            "command": "scp",
            "args": [
                "presence_sensor/target/aarch64-unknown-linux-gnu/release/presence_sensor",
                "pi@armtarget3:~/"
            ]
        },
        {
            "label": "Deploy dobot to armtarget4",
            "type": "shell",
            "command": "scp",
            "args": [
                "dobot/target/aarch64-unknown-linux-gnu/release/dobot",
                "pi@armtarget4:~/"
            ],
            "problemMatcher": []
        },
        {
            "label": "cargo build --release",
            "type": "cargo",
            "command": "build",
            "args": ["--release"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        }
    ]
}